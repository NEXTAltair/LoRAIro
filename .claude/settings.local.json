{
  "env": {
    "BASH_DEFAULT_TIMEOUT_MS": "5000000"
  },
  "permissions": {
    "allow": [
      "Bash(ls:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(rg:*)",
      "Bash(diff:*)",
      "edit:**/*.md",
      "edit:**/*.mdc",
      "Bash(tree:*)",
      "WebFetch(domain:github.com)",
      "Bash(git merge-base:*)",
      "Bash(git for-each-ref:*)",
      "Bash(ruff format:*)",
      "mcp__serena__find_file",
      "mcp__serena__list_dir",
      "mcp__serena__write_memory",
      "mcp__serena__read_memory",
      "mcp__serena__search_for_pattern",
      "mcp__serena__think_about_collected_information",
      "mcp__serena__list_memories",
      "mcp__serena__check_onboarding_performed",
      "mcp__serena__get_symbols_overview",
      "mcp__serena__find_symbol",
      "mcp__serena__replace_symbol_body",
      "mcp__serena__insert_after_symbol",
      "mcp__serena__find_referencing_symbols",
      "Bash(uv run mypy:*)",
      "Bash(uv run pytest:*)",
      "Bash(uv run ruff check:*)",
      "Bash(uv run ruff format:*)"
    ],
    "deny": [
      "read:.env",
      "execute:rm",
      "execute:git push"
    ]
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "context7"
  ],
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "^Bash\\b:(git\\s+(add|commit|push|pull)\\b|pytest\\b|ruff\\s+(check|format)\\b|mypy\\b|python\\b|uv\\s+(add|remove|sync|run)\\b|make\\b|npm\\s+(install|run)\\b|docker\\s+(build|run)\\b)",
        "hooks": [
          {
            "type": "command",
            "command": "/workspaces/LoRAIro/.claude/hooks/hook_pre_commands.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "^Bash\\b:(echo\\b|cat\\b|ls\\b|grep\\b|rg\\b|find\\b|python\\b|uv\\s+run\\b|pytest\\b)",
        "hooks": [
          {
            "type": "command",
            "command": "/workspaces/LoRAIro/.claude/hooks/hook_stop_words.sh"
          }
        ]
      }
    ]
  },
  "mcpServers": {
    "serena": {
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/oraios/serena",
        "serena-mcp-server",
        "--context",
        "ide-assistant",
        "--project",
        "/workspaces/LoRAIro"
      ]
    }
  }
}