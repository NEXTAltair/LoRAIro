{
  "env": {
    "BASH_DEFAULT_TIMEOUT_MS": "5000000"
  },
  "permissions": {
    "allow": [
      "Bash(ls:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(rg:*)",
      "Bash(diff:*)",
      "edit:**/*.md",
      "edit:**/*.mdc",
      "Bash(tree:*)",
      "WebFetch(domain:github.com)",
      "Bash(git merge-base:*)",
      "Bash(git for-each-ref:*)",
      "Bash(ruff format:*)"
    ],
    "deny": [
      "read:.env",
      "execute:rm",
      "execute:git push",
      "Bash(pytest:*)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "/workspaces/LoRAIro/.claude/hooks/hook_pre_commands.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "/workspaces/LoRAIro/.claude/hooks/hook_stop_words.sh"
          }
        ]
      }
    ]
  }
}