{
  "permissions": {
    "allow": [
      "Bash(ls:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(rg:*)",
      "Bash(diff:*)",
      "Bash(pytest:*)",
      "edit:**/*.md",
      "edit:**/*.mdc"
    ],
    "deny": [
      "read:.env",
      "execute:rm",
      "execute:git push"
    ]
  },
  "env": {
    "BASH_DEFAULT_TIMEOUT_MS": "5000000"
  }
}
