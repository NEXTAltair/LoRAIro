      "mcp__serena__check_onboarding_performed",
      "mcp__serena__delete_memory",
      "mcp__serena__edit_memory",
      "mcp__serena__find_file",
      "mcp__serena__find_referencing_symbols",
      "mcp__serena__find_symbol",
      "mcp__serena__get_symbols_overview",
      "mcp__serena__initial_instructions",
      "mcp__serena__insert_after_symbol",
      "mcp__serena__insert_before_symbol",
      "mcp__serena__list_dir",
      "mcp__serena__list_memories",
      "mcp__serena__read_memory",
      "mcp__serena__replace_symbol_body",
      "mcp__serena__search_for_pattern",
      "mcp__serena__think_about_collected_information",
      "mcp__serena__think_about_task_adherence",
      "mcp__serena__think_about_whether_you_are_done",
      "mcp__serena__write_memory",
      "WebSearch",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:api.github.com)",
      "WebFetch(domain:raw.githubusercontent.com)",
      "WebFetch(domain:code.claude.com)",
      "WebFetch(domain:claude.com)",
      "WebFetch(domain:ai.pydantic.dev)",
      "Read(//workspaces/**)",
      "Read(//home/vscode/**)",
      "Bash(git *)",
      "Bash(uv:*)",
      "Bash(timeout:*)",
      "Bash(QT_QPA_PLATFORM=offscreen uv run pytest:*)",
      "Bash(make:*)",
      "Bash(gh pr view:*)",
      "Bash(docker build:*)",
      "Bash(docker volume:*)",
      "Bash(sqlite3:*)",
      "Bash(python3:*)",
      "Bash(code --list-extensions)",
      "Bash(env)",
      "Bash(find:*)",
      "Bash(ls:*)",
      "Bash(tree:*)",
      "Bash(head:*)",
      "Bash(cat:*)",
      "Bash(wc:*)",
      "Bash(tee:*)",
      "Bash(test:*)",
      "Bash(mkdir:*)",
      "Bash(chmod:*)",
      "Bash(curl:*)",
      "Bash(pkill:*)",
      "Bash(mount:*)",
      "Bash(grep:*)",
      "Bash(xargs:*)",
      "WebFetch(domain:pytest-qt.readthedocs.io)",
      "WebFetch(domain:ilmanzo.github.io)",
      "Bash(git commit:*)",
      "Skill(save-session)",
      "Bash(gh issue list:*)",
      "Bash(gh issue close:*)",
      "Bash(gh issue view:*)",
      "Bash(gh repo view:*)"
    ],
    "deny": [],
    "ask": []
  },
  "enableAllProjectMcpServers": true,
  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "/workspaces/LoRAIro/.claude/hooks/hook_session_start.py"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "/workspaces/LoRAIro/.claude/hooks/hook_session_end.py"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "/workspaces/LoRAIro/.claude/hooks/hook_assistant_response_checker.py"
          }
        ]
      },
      {
        "matcher": "Grep",
        "hooks": [
          {
            "type": "command",
            "command": "/workspaces/LoRAIro/.claude/hooks/hook_git_grep_enforcement.py"
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "/workspaces/LoRAIro/.claude/hooks/hook_pre_commands.py"
          }
        ]
      },
      {
        "matcher": "Read",
        "hooks": [
          {
            "type": "command",
            "command": "/workspaces/LoRAIro/.claude/hooks/hook_plan_read_redirect.py"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "/workspaces/LoRAIro/.claude/hooks/hook_stop_words.py"
          }
        ]
      },
      {
        "matcher": "ExitPlanMode",
        "hooks": [
          {
            "type": "command",
            "command": "/workspaces/LoRAIro/.claude/hooks/hook_post_plan_mode.py"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "/workspaces/LoRAIro/.claude/hooks/hook_response_monitor.py"
          }
        ]
      }
    ]
  },
  "language": "japanese"
}
