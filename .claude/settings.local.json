{
  "env": {
    "BASH_DEFAULT_TIMEOUT_MS": "5000000"
  },
  "permissions": {
    "allow": [
      "mcp__cipher__cipher_memory_search",
      "mcp__cipher__cipher_extract_and_operate_memory",
      "mcp__serena__delete_memory",
      "mcp__serena__get_symbols_overview",
      "mcp__serena__list_dir",
      "mcp__serena__search_for_pattern",
      "mcp__serena__list_memories",
      "WebSearch",
      "mcp__serena__read_memory",
      "SlashCommand(/plan)",
      "mcp__serena__find_symbol",
      "Bash(git config:*)",
      "Bash(uv run mypy:*)",
      "Bash(code --list-extensions)",
      "Bash(timeout 10 uv run mypy:*)",
      "Bash(find:*)",
      "Bash(uv run python:*)",
      "Bash(uv run pytest:*)",
      "Bash(env)",
      "Bash(uv sync:*)",
      "mcp__cipher__get_current_config",
      "mcp__cipher__activate_project",
      "mcp__cipher__check_onboarding_performed",
      "WebFetch(domain:github.com)",
      "mcp__cipher__resolve-library-id",
      "mcp__cipher__get-library-docs",
      "mcp__cipher__list_memories",
      "Bash(cat:*)",
      "mcp__cipher__find_symbol",
      "Read(//home/vscode/**)",
      "Bash(uv --version:*)",
      "Bash(test:*)",
      "Bash(uv venv:*)",
      "Bash(uv help:*)",
      "Bash(uv pip list:*)",
      "Read(//workspaces/**)",
      "Bash(mount:*)",
      "Bash(uv:*)",
      "mcp__cipher__search_for_pattern",
      "mcp__cipher__write_memory"
    ],
    "deny": [],
    "ask": []
  },
  "enableAllProjectMcpServers": true,
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "/workspaces/LoRAIro/.claude/hooks/hook_assistant_response_checker.py"
          }
        ]
      },
      {
        "matcher": "Grep",
        "hooks": [
          {
            "type": "command",
            "command": "/workspaces/LoRAIro/.claude/hooks/hook_git_grep_enforcement.py"
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "/workspaces/LoRAIro/.claude/hooks/hook_pre_commands.py"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "/workspaces/LoRAIro/.claude/hooks/hook_stop_words.py"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "/workspaces/LoRAIro/.claude/hooks/hook_response_monitor.py"
          }
        ]
      }
    ]
  }
}
