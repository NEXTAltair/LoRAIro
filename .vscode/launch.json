{
  // .vscode/launch.json
  "version": "0.2.0",
  "configurations": [

    {
      "name": "LoRAIro GUI",
      "type": "debugpy",
      "request": "launch",
      "module": "lorairo.main",
      "console": "integratedTerminal",
      "justMyCode": false,
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Python: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": false
    },
    {
      "name": "Python: Debug Tests",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "purpose": ["debug-test"],
      "console": "integratedTerminal",
      "justMyCode": false
    },
    {
      "name": "Windows Environment - File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": false,
      "cwd": "${workspaceFolder}",
      "env": {
        "UV_PROJECT_ENVIRONMENT": ".venv",
        "PYTHONPATH": "${workspaceFolder}/src:${workspaceFolder}/local_packages/image-annotator-lib/src:${workspaceFolder}/local_packages/genai-tag-db-tools/src"
      },
      "python": "${workspaceFolder}/.venv/Scripts/python.exe"
    },
    {
      "name": "Windows Environment - Module",
      "type": "debugpy",
      "request": "launch",
      "module": "lorairo.gui.widgets.${fileBasenameNoExtension}",
      "console": "integratedTerminal",
      "justMyCode": false,
      "cwd": "${workspaceFolder}",
      "env": {
        "UV_PROJECT_ENVIRONMENT": ".venv",
        "PYTHONPATH": "${workspaceFolder}/src:${workspaceFolder}/local_packages/image-annotator-lib/src:${workspaceFolder}/local_packages/genai-tag-db-tools/src"
      },
      "python": "${workspaceFolder}/.venv/Scripts/python.exe"
    },
    {
      "name": "Windows Environment - Smart File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": false,
      "cwd": "${workspaceFolder}",
      "env": {
        "UV_PROJECT_ENVIRONMENT": ".venv",
        "PYTHONPATH": "${workspaceFolder}/src:${workspaceFolder}/local_packages/image-annotator-lib/src:${workspaceFolder}/local_packages/genai-tag-db-tools/src"
      },
      "python": "${workspaceFolder}/.venv/Scripts/python.exe",
      "preLaunchTask": "module-path-resolver"
    }
  ],
  "compounds": [
    {
      "name": "GUI Debug",
      "configurations": ["LoRAIro GUI"]
    }
  ]
}
